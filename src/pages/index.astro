---
import Layout from "../layouts/Layout.astro";
import {
  // Hero,
  SkillSection,
  About,
  ContactForm,
} from "../components/pages/index";
import Hero from "../components/pages/hero.astro";
// import Project from "../components/ui/Project";
import ProjectsList from "../components/ui/ProjectsList";
import { SkillList as sk, Projects } from "../i18n/ui";
import { SEO } from "astro-seo";
---

<Layout>
  <SEO
    slot="head"
    title="Tristan Mayo | Designer & Full-Stack Software Engineer"
    description="Full Stack Software Engineer & Designer with 4+ years of experience specializing in Typescript & Golang. I find great joy in building complex projects fast and I am interested in way too many things but very passionate about linux, open source and reading."
  />
  <main class="">
    <!-- HERO -->
    <Hero />
    <!-- SKILLS -->
    <section class="custom-screen py-16" id="skills">
      <SkillSection
        slides={[
          {
            title: "Languages",
            desc: "I am skilled in HTML, CSS, JavaScript, and TypeScript, and have used them to develop web applications and user interfaces. I also have some experience with C and Python for specific projects.",
            skills: [sk.html, sk.css, sk.js, sk.ts, sk.go],
          },
          {
            title: "Front-End",
            desc: "I have expertise in front-end frameworks and libraries such as Tailwind CSS, ReactJS, NextJS, NuxtJS, and AstroJS. I use these tools to create high-performance web applications and user interfaces that deliver dynamic and engaging experiences for clients.",
            skills: [
              sk.tailwind,
              sk.bootstrap,
              sk.react,
              sk.next,
              sk.svelte,
              sk.vue,
              sk.nuxt,
              sk.astro,
            ],
          },
          {
            title: "Back-End",
            desc: "On the backend, I specialize in technologies such as NodeJS, Express, Golang, NextJS, NuxtJS, MongoDB, MySQL, tRPC, and Prisma. These tools allow me to build scalable and efficient server-side applications and databases that meet the needs of clients.",
            skills: [
              sk.nodejs,
              sk.express,
              sk.go,
              sk.api,
              sk.next,
              sk.nuxt,
              sk.mongodb,
              sk.mysql,
              sk.trpc,
              sk.prisma,
            ],
          },
          {
            title: "Dev-ops",
            desc: "I have experience using DevOps technologies such as Linux servers, Ansible, and Nginx to automate application deployment and ensure server stability and security. Though I am still growing in this area, I can efficiently manage application deployments and server maintenance using these tools.",
            skills: [sk.linuxServer, sk.nginx, sk.aws],
          },
          {
            title: "Beyond",
            desc: "I am proficient in Git, Linux, WordPress, Figma, and Photoshop, which support my work as a developer. These tools enable me to track changes, work efficiently, create and manage websites, and design user interfaces and other graphics.",
            skills: [
              sk.git,
              sk.linuxUser,
              sk.wordpress,
              sk.figma,
              sk.photoshop,
            ],
          },
        ]}
        client:only
      />
    </section>
    <!-- PROJECTS -->
    <section class="custom-screen" id="projects">
      <div class="py-5">
        <h2
          class="text-center text-3xl font-bold uppercase sm:text-4xl md:text-5xl"
        >
          <span class="border-l-4 border-indigo-700 pl-2 text-indigo-700"
            >Pro</span
          >jects
        </h2>
      </div>
      <ProjectsList client:only projectList={Projects} />
    </section>

    <!-- ABOUT -->
    <section class="custom-screen">
      <About />
    </section>

    <!-- Form -->
    <section class="custom-screen py-16 lg:py-24" id="contact">
      <div class="space-y-8 px-5 py-16 shadow">
        <ContactForm
          formText={{
            name: "Name",
            company: "Company",
            email: "Email Address",
            phone: "Phone Number",
            message: "Message",
            button: "Get in touch",
          }}
        />
      </div>
    </section>
  </main>
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>
